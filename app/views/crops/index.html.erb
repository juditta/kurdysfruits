<h1>Listing crops</h1>

<table>
  <tr>
    <th>Date</th>
    <th>Plot</th>
    <th>Quantity</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @crops.each do |crop| %>
  <tr>
    <td><%= crop.date %></td>
    <td><%= crop.plot_id %></td>
    <td><%= crop.quantity %></td>
    <td><%= link_to 'Show', crop %></td>
    <td><%= link_to 'Edit', edit_crop_path(crop) %></td>
    <td><%= link_to 'Destroy', crop, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

